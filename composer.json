{
  "name": "monkeyscloud/monkeyslegion-database",
  "description": "Native PDO-powered MySQL 8.4 connection and query helpers.",
  "type": "library",
  "license": "MIT",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "MonkeysCloud",
      "email": "jorge@monkeys.cloud"
    }
  ],
  "require": {
    "php": "^8.4",
    "ext-pdo_mysql": "*",
    "monkeyscloud/monkeyslegion-cache": "^1.0.x-dev"
  },
  "autoload": {
    "psr-4": {
      "MonkeysLegion\\Database\\": "src/"
    },
    "files": [
      "src/Support/Helpers.php"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.0.x-dev"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^12.3",
    "phpstan/phpstan": "^2.1"
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage",
    "phpstan": "phpstan analyse src",
    "quality": [
      "@phpstan",
      "@test"
    ]
  }
}
